{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Client",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/client"
        ],
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start Server", 
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/server",
        "env": {
          "PORT": "5002"
        }
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative", 
          "${workspaceFolder}/server"
        ],
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start Full Stack",
      "dependsOn": [
        "Start Client",
        "Start Server"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Client",
      "type": "shell", 
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "Build Server",
      "type": "shell",
      "command": "npm run build", 
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "Build All",
      "dependsOn": [
        "Build Client",
        "Build Server"
      ],
      "dependsOrder": "parallel",
      "group": "build"
    }
  ]
}